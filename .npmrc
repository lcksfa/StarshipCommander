# pnpm configuration
# https://pnpm.io/npmrc

# Enable strict peer dependencies (set to false for compatibility with legacy packages)
strict-peer-dependencies=false

# Enable shamefully-hoist for better compatibility with create-react-app and other tools
shamefully-hoist=true

# Auto install peer dependencies
auto-install-peers=true

# Use the global store directory
store-dir=~/.pnpm-store

# Save exact versions (set to true for reproducible builds)
save-exact=false

# Prefer deduping dependencies
prefer-frozen-lockfile=false

# Registry configuration
registry=https://registry.npmjs.org

# Enable installation of optional dependencies
optional=true

# Enable progress bar
progress=true

# Set log level
loglevel=warn

# Enable color output
color=true
